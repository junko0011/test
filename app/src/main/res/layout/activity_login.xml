<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- layout_gravity 는 전체화면중 layout의 정렬 / gravity는 layout안에 text의 정렬-->
    <TextView
        android:id="@+id/textView로그인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="로그인"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark"
        />
    <!-- match 꽉채움 / wrap 컨텐츠 크기만큼 / backgraound는 안쓰겠다, 왜냐 이미지 찌그러져-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:src="@drawable/icon_present"
        android:gravity="center"

        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="이메일"/>
    </com.google.android.material.textfield.TextInputLayout>

<!--    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="이메일"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:hint="비밀번호"/>
    </com.google.android.material.textfield.TextInputLayout>

<!--    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="비밀번호"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/btn_sky"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/icon_login"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginRight="60dp"
            android:text="로그인"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/textViewOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="또는"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/inroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_blue"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="20dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/textLostPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="비밀번호 찾기"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textInroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="회원가입 하기"
            android:textSize="20dp"/>
    </LinearLayout>






</LinearLayout>